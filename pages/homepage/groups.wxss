/* pages/homepage/groups.wxss */
@import "../template/template.wxss";
.list-item {
  display: flex;
  flex-direction: row;
  /* flex-direction: column; */
  justify-content: space-between;
  /* justify-content: flex-start; */
  padding: 0 30rpx;
  margin: 20rpx 10rpx;
  height: 126px;
  border-bottom: 12rpx solid #eee;
}
.image {
  /* height: 172rpx; */
  width: 200rpx;
  max-height: 200rpx;
  margin: 0 5rpx;
  flex-shrink: 0;
  border-radius: 5px;
  /* border-radius: 100%; */
  /* border:1px solid #aaaaaa; */
  align-self: center;
}
.item-name {
  width:500rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* background-color: #f00; */
  padding-left: 20rpx;
}
.name {
  font-size: 14px;
  color: #333333;
  flex-shrink: 0;
  padding: 10rpx 10rpx 12rpx 10rpx;
  font-weight: bolder;
}
.member {
  font-size: 12px;
  color: #0051A0;
  flex-shrink: 0;
  padding: 0rpx 10rpx;
}
.list {
  padding-bottom:100px;
  margin-top: 100rpx;
}
.button{
  height: 40rpx;
  line-height: 40rpx;
  width: 100rpx;
  border: 1px solid #017be1;
  border-radius: 10px;
  font-size: 8px;
  align-self: center;
}
.buttom-data {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  justify-content: flex-start;
  padding: 10rpx 10rpx 10rpx 20rpx;
}
.image1{
  width: 22rpx;
  height: 20rpx
}
.image2{
  width: 24rpx;
  height: 20rpx
}
.introduce{
  font-size: 11px;
  color: #999;
  padding: 5rpx 10rpx 5rpx 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 17px;
  height: 34px;
}