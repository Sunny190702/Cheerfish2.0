/* pages/homepage/members.wxss */
.list-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 0 30rpx;
  margin: 20rpx 10rpx;
  /* height: 80px; */
  border-bottom: 1rpx solid #aaaaaa;
}
.image {
  height: 120rpx;
  width: 120rpx;
  margin: 0 5rpx;
  flex-shrink: 0;
  border-radius: 100%;
  border:1px solid #aaaaaa;
  align-self: center;
}
.item-name {
  width:400rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 0 20rpx 20rpx 20rpx;
}
.name {
  font-size: 14px;
  color: #333333;
  flex-shrink: 0;
  padding: 20rpx 10rpx;
}
.member {
  font-size: 12px;
  color: #999999;
  flex-shrink: 0;
  padding: 0rpx 10rpx;
}
.list {
  padding-bottom:100px;
}
.button{
  height: 60rpx;
  line-height: 60rpx;
  width: 140rpx;
  border: 1px solid #017be1;
  border-radius: 10px;
  font-size: 12px;
  align-self: center;
}