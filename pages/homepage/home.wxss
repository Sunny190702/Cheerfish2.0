/* pages/homepage/home.wxss */
@import "./index.wxss";
@import "../template/template.wxss";
.info-box {
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
}
.info-card{
  /* background-color: #3088e0; */
  background-color: #fff;
  padding:20rpx 0;
}
.logo {
  height: 86px;
  width: 86px;
  flex-shrink: 0;
  border-radius: 50%;
  border: 2px solid #ffffff;
  /* align-self: center; */
}

.info-message-card {
  width: 100%;
  height: 68px;
  display: flex;
  flex-direction: row;
  padding:1rpx 82rpx;
  justify-content: space-between;
  margin-top: 6px;
}
.info-message-box {
  display: flex;
  flex-direction: column;
  padding:10px 0 10px 20px;
}

.info-message-box text{
  font-size: 14px;
  color:#333;
  width:150rpx;
  justify-content: center;
}
.group-audits-card{
  position: absolute;
  width:100px;
  right: -10px;
  top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.group-audits-button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width:100%;
  margin:10px 10px;
  border: 1px solid #3088e0;
  border-radius:5px;
  align-items: center;
  align-content: center;
}

.info-message-button{
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* width:160rpx; */
  margin:15px 10px;
  border: 1px solid #0174D9;
  border-radius:25px;
  align-items: center;
  background-color: #0174D9;
  min-width: 63px;
  height: 24px;
}

.info-message-button image{
  width:42rpx;
  height:42rpx;
}
.icon{
  width:42rpx;
  height:42rpx;
  align-items: center;
  
}
.info-message-button text{
  font-size: 12px;
  /* color:#333; */
  color:#fff;
  justify-content: start;
  padding-left:5rpx;
}

.listbox{
  display: flex;
  flex-direction: column;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:2px 10px;
  font-size: 16px;
}

.item {
  display: flex;
  flex-direction: column;
  /* padding: 20rpx 30rpx 0 30rpx; */
}

/* .item-image {
  flex-shrink: 0;
  width: 240rpx;
