@import "../template/template.wxss";
@import '/pages/template/search/index.wxss';

.swiper-tab {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
}

.job-tab {
  height: 90rpx;
  /* background-color: #f7f7f7; */
  
  position: fixed;
  top:165rpx;
  width: 100%;
  z-index: 99999;
  background-color: #fff;
  opacity:1;
}

.job-container {
  padding-top: 15rpx;
  margin-top: 150rpx;
}
.job-container:last-child {
  padding-bottom: 100rpx;
}

.job1 {
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 16px;
  font-weight: 800;
  background-color: #00519f;
  width: 50%;
  text-align:center;
  /* border-radius: 50px; */
}
.job2 {
  height: 60rpx;
  line-height: 60rpx;
  color: #00519f;
  font-size: 16px;
  font-weight: 800;
  /* background-color: #00519f; */
  width: 50%;
  text-align:center;
  border: 1px solid #00519f;
}

.show{
  display: block;
}
.hidden{
  display: none;
}
.item {
  display: flex;
  flex-direction: column;
  padding: 25rpx 30rpx 0 30rpx;
}

.item-top {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 20rpx;
}

.position {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.position-name {
  font-size: 14px;
  color: #333333;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical /*! autoprefixer: on */;
}

.position-join {
  font-size: 14px;
  height: 60rpx;
  line-height: 60rpx;
  width: 160rpx;
  color: #053c96;
  background-color: #d9eaf9;
  border: 1px solid #0172d6;
  border-radius: 30rpx;
  margin: 0;
}

.source {
  display: flex;
  justify-content: flex-start;
}

.source-dep {
  font-size: 14px;
  color: #333333;
  width: 100%;
}

.source-line {
  font-size: 12px;
  padding: 0 20rpx;
  color: #d0d0d0;
}

.source-author {
  font-size: 12px;
  color: #d0d0d0;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.author {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.author-avatar {
  height: 34rpx;
  width: 34rpx;
  flex-shrink: 0;
  border-radius: 50%;
}

.author-name {
  font-size: 12px;
  color: #999999;
  padding: 0 10rpx;
  flex-shrink: 0;
}

.author-grade {
  height: 25rpx;
  width: 40rpx;
  flex-shrink: 0;
}

.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-image {
  height: 17rpx;
  width: 25rpx;
}

.content-title {
  font-size: 12px;
  color: #999999;
  padding-left: 10rpx;
  padding-right: 15rpx;
  flex-shrink: 0;
}

.content-time {
  font-size: 12px;
  color: #999999;
  flex-shrink: 0;
}

.title-state {
  font-size: 12px;
  color: #ffffff;
  background-color: #ff0000;
  padding: 5rpx 10rpx;
  font-weight: 500;
  margin-left:10px;
}