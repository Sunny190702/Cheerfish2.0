/* search container */
.search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 0 30rpx;
}

.search-input {
  color: #777777;
  background-color: #fff;
  height: 60rpx;
  font-size: 14px;
  flex-grow: 1;
  border-radius: 50px;
  padding-left: 70rpx;
  border: 1px solid #dddddd;
}

.search-text {
  font-size: 14px;
  color: #00519f;
  padding-left: 30rpx;
}

.search-logo {
  width: 100rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

.search-icon {
  height: 40rpx;
  width: 40rpx;
  position: relative;
  top: -53rpx;
  left: -52rpx;
