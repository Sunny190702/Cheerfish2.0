.image_button::after { 
  border: none; 
}

.image_button text{
  font-size: 14px;
}
.menu-image{  
  height: 64rpx;
  width: 64rpx;
  align-self: center;
}

.menu-button{  
  color: #333333;  
  background-color: #fff;  
  text-align: center;  
  height: 90rpx;  
  line-height: 90rpx;  
