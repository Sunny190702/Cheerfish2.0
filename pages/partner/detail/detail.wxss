@import "/pages/template/template.wxss";
.upload {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width:100%;
  align-items: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.upload-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 30rpx 15rpx 30rpx;
}
.upload-box-title{
  color: #333;
  padding: 1px 0;
  padding-right:10px;
  align-items: center;
  font-size: 23px;
  /* font-size: 22.67pt; */
  letter-spacing: 5px;
  font-weight: 600;
  padding-bottom: 20px;
}
.upload-box-text{
  display: flex;
  justify-content: flex-start;
  flex-shrink: 0;
  margin-top: 20px;
}
.upload-box-text view{
  color: #000;
  align-items: center;
  font-size: 12px;
  letter-spacing: 2px;
  font-weight: 500;
  /* padding: 1px 8px; */
  border-radius: 50px;
  width: 63px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  background: linear-gradient(to right, #017CE3, #0348A3); 
  /* background-color: #0178dd;
  /* border: 1px solid #02d0c7; */
}
.upload-box-text view text{
  font-size: 12px;
  letter-spacing: 2px;
  font-weight: 500;
  color: #fff;
}
.upload-box-time{
  color: #999;
  align-items: center;
  font-size: 12px;
  /* font-size: 11.33pt; */
  /* letter-spacing: 2px; */
  font-weight: 500;
  margin-top:10px;
  margin-left: 12px;
}
.upload-box-time-icon{
  width: 10px;
  height: 10px;
}
.upload-box-hot-icon{
  width: 11.33px;
  height: 8px;
  margin-left: -1px;
}
.upload-box-addr-icon {
  width: 9px;
  height: 10px;
}
.upload-image{
  width:100vw;
}
.detail-wrap-box {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 30rpx 15rpx 15rpx;
}
.detail-wrap {
  display: flex;
  flex-direction: column;
  box-shadow:1px 1px 10px #ececef;
  border-radius:10px;
  padding: 15rpx 30rpx;
}

.item-key {
  font-size: 14px;
  padding:  8rpx 0;
  color: #333333;
  width:85%;
}
.item-value {
  font-size: 14px;
  padding:  10rpx 0 15rpx 10rpx;
  color: #333333;
  width:100%;
  word-break: break-all;
  letter-spacing: 2px;
  line-height-step: 20px;
}


/* 海报 */

