  bottom: 300rpx;
  left: 10%;
  background: #0178dd;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}
button[class="baocun"]::after{
  border: 0;
}
.create-image{
  width: 80%;
  height: 60%;
  position: fixed;
  top: 100rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}
.upload-box-publisherInfo {
  display: flex;
  justify-content: flex-start;
  flex-shrink: 0;
  margin-top:15px;
}
.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.tit {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 10rpx;
  width:580rpx;
}
.title {
  font-size: 14px;
  color: #333333;
  padding-top: 5rpx;
}
.name {
  font-size: 12px;
  color: #a7a7a7;
  padding-top: 5rpx;
}
.icon-addr {
  height: 20rpx;
  width: 20rpx;
  padding-left:5px;
}
.icon-view {
  height: 16rpx;
  width: 23rpx;
  padding-left:5px;
}




.phone_image{
  width: 28px;
  height: 28px;
}


.menu-view{  
  width: 90%;  
  height: 340rpx;  
  background-color: #fff;  
  margin-bottom: -165px;  
