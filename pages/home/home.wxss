}

.college {
  /* padding-bottom: 20rpx; */
  /* border-bottom: 20rpx  #e4e4e4 #ccc; */
  /* padding: 30rpx 30rpx; */
  padding-top:30rpx;
}
.college-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.college-item {
  width: 24%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  text-align: center;
  flex-grow: 0;
}

.college-item image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-bottom: 6rpx;
}
.college-item .name {
  font-size: 12px;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.college-item .name1 {
  font-size: 12px;
}

.more {
  border: 1px solid #00519f;
  color: #00519f;
  font-size: 12px;
  height: 25px;
  line-height: 25px;
  width: 165rpx;
  margin-bottom: 40rpx;
  align-items: center;
  background-color: #fff;
  border-radius: 50px;
}

.course {
  padding: 0rpx 30rpx 50rpx;
}

.course-chosen {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e4e4e4;
  padding: 30rpx 0;
}

.course-chosen:first-child {
  padding-top: 0;
}

.course-chosen:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
.course-chosen-image {
  height: 200rpx;
  width: 50%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  flex-shrink: 0;
  border-radius: 10px;
}
.course-chosen-image image {
  height: 200rpx;
  width: 100%;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  flex-shrink: 0;
  border-radius: 10px;
}
