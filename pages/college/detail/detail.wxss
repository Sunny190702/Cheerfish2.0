/* pages/college/detail/detail.wxss */
@import "/pages/template/template.wxss";

.college-card {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
}

.college-card-image {
  padding: 20rpx 0;
}
.college-card-cover {
  height: 400rpx;
  width: 100%;
  border-radius: 10px;
}

.college-card-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 30rpx;
}

.college-card-card1 {
  display: flex;
  justify-content: flex-start;
  /* flex-grow: 1; */
  flex-shrink: 0;
}

.college-card-logo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.college-card-tit {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 10rpx;
}

.college-card-title {
  font-size: 14px;
  color: #333333;
}
.college-card-name {
  font-size: 12px;
  color: #a7a7a7;
  padding-top: 10rpx;
}
.college-card-share-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f4f7fa;
  height: 60rpx;
  width: 140rpx;
  border-radius: 25px;
  margin: 0;
}
.college-card-share-wrap::after {
  border: none;
}
.college-card-icon {
  height: 21rpx;
  width: 27rpx;
}

.college-card-share {
  padding-left: 10rpx;
  font-size: 12px;
  color: #727272;
  flex-shrink: 0;
}

.college-card-desc-wrap {
  padding: 30rpx 0;
}

.college-card-desc1 {
  font-size: 14px;
  line-height: 28px;
  color: #666666;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical /*! autoprefixer: on */;
}

.college-card-desc {
  font-size: 14px;
  line-height: 28px;
  color: #666666;
}

.college-card-icon1 {
  height: 40rpx;
  width: 750rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  justify-content: space-between;
}

.card {
  width: 48%;
}

.cardview {
  /* width: 50%; */
  width: 100%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  box-shadow: 1rpx 1rpx 5rpx 0rpx #f4f7fa;
  margin-bottom: 30rpx;
  border-radius: 8px;
}

.part-one {
  display: flex;
  flex-direction: column;
  height: 245rpx;
}

.image {
  height: 245rpx;
  width: 330rpx;
  /* border-top-left-radius: 8px;
  border-top-right-radius: 8px; */
}

.title {
  width: 330rpx;
  height: 50rpx;
  position: relative;
  bottom: 0;
  color: #ffffff;
  font-size: 14px;
  background-color: black;
  flex-grow: 1;
  opacity: 0.4;
}

.part-two{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

}

.context {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 20rpx 0 0 20rpx;
}
.name {
  font-size: 14px;
  color: #333333;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical /*! autoprefixer: on */;
  height:80rpx;
}
.source {
  padding-top: 20rpx;
  font-size: 12px;
  color: #999999;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.author {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.author-name {
  font-size: 12px;
  color: #999999;
  padding-right: 10rpx;
  flex-shrink: 0;
}

.author-grade {
  height: 25rpx;
  width: 40rpx;
  flex-shrink: 0;
}

.item-icon {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx 30rpx 20rpx;
  /* flex-wrap: nowrap; */
}

.icon-text {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.icon1 {
  height: 16rpx;
  width: 23rpx;
}

.icon2 {
  height: 17rpx;
  width: 20rpx;
}

.icon-number {
  font-size: 12px;
  color: #b4b4b4;
  padding-left: 8rpx;
  padding-right: 19rpx
}

.join {
  font-size: 14px;
  margin: 0;
  height: 60rpx;
  width: 160rpx;
  line-height: 60rpx;
  color: #053c96;
  border-radius: 30rpx;
  background-color: #d9ebfa;
  border: 1px solid #053c96;
}


/* desc js */
.outer {
  background-color: #eee;
  padding-bottom: 30px;
  margin: 0 -30rpx;
}
.desc-container {
  /* width: 200px;
  margin: 0 auto;
  background-color: #fff;
  padding: 10px; */
  background-color: #fff;
  position: relative;
}
.article {
  text-align: justify;
  font-size: 14px;
  color: #666666;
  /* color: #000; */
  padding: 0 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical /*! autoprefixer: on */;
}
.open {
  -webkit-line-clamp: unset;
}
.circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 45%;
  background-color: #fff;
  position: absolute;
  bottom: -24rpx;
  left: 50%;
  margin-left: -30rpx;
}
.line {
  width: 15rpx;
  height: 4rpx;
  background-color: #eee;
  position: absolute;
  bottom: 16px;
}
.left {
  left: 14rpx;
  transform: rotate(45deg);
}
.right {
  right: 14rpx;
  transform: rotate(-45deg);
}