.modal-wrap {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal {
  display: flex;
  width: 76%;
  height: 40%;
  margin-top: -150rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  flex-flow: column;
}

.logo-box {
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: #fff;
  align-items: center;
  justify-content: center;
  width: 100%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

.modal-btn {
  width: 100%;
  font-size: 32rpx;
  background-color: #204c90;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  color: #fff;
}
.info_titile{
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 24rpx;
  color: #757373;
  padding-top:30rpx;
}
.info_content{
  display: flex;
  padding-top:30rpx;
  justify-content: center;
  width: 100%;
  font-size: 36rpx;
  color: #000000;
  font-weight: 1000;
}
