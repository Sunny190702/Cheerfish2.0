/* pages/template/search/index.wxss */

/* search container */
.dividing {
  height: 20rpx;
  background-color:#eeeeee;
}

.search-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  /* padding: 20rpx 30rpx 0 30rpx; */
  position: fixed;
  width: 100%;
  z-index: 99999;
  background-color: #fff;
  border-top: 5rpx solid #f0f3f8;
}

.search-input {
  color: #333333;
  background-color: #f5f5f5;
  height: 60rpx;
  font-size: 14px;
  flex-grow: 1;
  border-radius: 50px;
  padding-left: 70rpx;
  border: 1px solid #dddddd;
}

.search-text {
  font-size: 14px;
  color: #00519f;
  padding-left: 30rpx;
}

.search-logo {
  width: 100rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

.search-icon {
  height: 40rpx;
  width: 40rpx;
  position: relative;
  top: -53rpx;
  left: -52rpx;
  /* background-color: red; */
}

.none-wrap {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.none-wrap image {
  height: 270rpx;
  width: 320rpx;
}

.none-wrap text {
  font-size: 14px;
  color: #999999;
  padding-top: 50rpx;
}

.resultwrap {
  margin-top: 100rpx;
}

/*搜索历史列表外部容器样式*/
.ddclass {
  position: absolute;
  width: 100%;
  margin-top: 10px;
  left: 0;

 }


 /*搜索历史普通样式*/

 .history-wrap {
  padding: 100rpx 30rpx 30rpx 30rpx
 }

 .liclass {
  font-size: 14px;
  line-height: 34px;
  color: #666666;
  height: 34px;
  display: block;
  /* padding-left: 18px; */
  background-color: #fff;
  border-bottom: 1px solid #eee;
 }

 .history-span {
  font-size: 14px;
  color: #999999;
 }