/* .join-wrap */
.join-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 52rpx;
}

.join-wrap-head {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 80%;
  flex-grow: 1;
}
.join-wrap-image {
  height: 60rpx;
  width: 60rpx;
  margin: 0 5rpx;
  flex-shrink: 0;
  border-radius: 100%;
}

.join-wrap-statistics {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;

}

.join-wrap-statistics-text {
  font-size: 12px;
  color: #999999;
}

.join-wrap-statistics-num {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 10rpx;
}

.apply-number {
  font-size: 14px;
  color: #053c96;
}

.total-number {
  font-size: 12px;
  color: #333333;
}

