.dividing {
  height: 20rpx;
  background-color:#eeeeee;
}

.course {
  padding: 0rpx 30rpx 50rpx;
  display: flex;
  flex-direction: column;
}

.course-chosen {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e4e4e4;
  padding: 30rpx 0;
}

/* .course-chosen:first-child {
  padding-top: 0;
} */

.course-chosen:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
.course-chosen-image {
  height: 230rpx;
  width: 315rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  flex-shrink: 0;
  border-radius: 10px;
}

.course-chosen-desc {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  padding:10px 0 10px 15px;
  width: 375rpx;
}

.course-chosen-icon {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top:auto;
}

.course-chosen-icon button {
  height: 30px;
  width: 80px;
  line-height: 30px;
  margin: 0;
  border-radius: 15px;
  /* border: 1px  #e4e4e4 #017ee4; */
  color: #ffffff;
  background-color: #0173d7;
  font-size: 14px;
}

/* .course-chosen-icon image {
  height: 20rpx;
  width: 20rpx;
} */

.icon1 {
  height: 16rpx;
  width: 23rpx;
}
.icon2 {
  height: 17rpx;
  width: 20rpx;
}
.course-chosen-desc-text {
  font-size: 14px;
  color: #b4b4b4;
  padding: 0 19rpx 0 8rpx;
 }
.course-chosen-desc-title {
  font-size: 16px;
  color: #333333;
  margin-bottom:5px;
}

.course-chosen-desc-desc {
  font-size: 12px;
  color: #808080;
  /* height: 36px;
  overflow: hidden; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical /*! autoprefixer: on */;
}
.none-wrap {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.none-wrap image {
  height: 270rpx;
  width: 320rpx;
}

.none-wrap text {
  font-size: 14px;
  color: #999999;
  padding-top: 50rpx;
}