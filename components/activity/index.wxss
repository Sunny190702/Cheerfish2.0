.containers {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.list:last-child {
  padding-bottom: 100rpx;
}
.item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 33rpx 0 33rpx;
}
.title {
  width:100%;
  font-size: 14px;
  color: #333333;
  padding: 2rpx 2rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bolder;
  min-height: 20px;
  letter-spacing: 1px;
}
.item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8rpx;
  border-bottom: 1px solid #e4e4e4;
}
.item-image {
  flex-shrink: 0;
  width: 360rpx;
  height: 220rpx;
  border-radius: 20px;
  padding: 26rpx 0;
}
.item-desc {
  width: 45%;
  flex-shrink: 1;
  display: flex;
  height: 230rpx;
  justify-content: center;
  flex-direction: column;
  padding-left:20rpx;
}
.item-info {
  display: flex;
  justify-content: flex-start;
  padding: 10rpx 0;
}
.item-info-author-icon {
  height: 22rpx;
  width: 20rpx;
  padding-top: 5rpx;
  padding-right: 20rpx;
}
.item-info-time-icon {
  width: 20rpx;
  height: 20rpx;
  padding-top: 6rpx;
  padding-right: 20rpx;
}
.item-info-addr-icon {
  width: 17rpx;
  height: 20rpx;
  padding-top: 6rpx;
  padding-left: 3rpx;
  padding-right: 20rpx;
}
.item-info-hot-icon {
  width: 22.6rpx;
  height: 16rpx;
  padding-top: 8rpx;
  padding-left: -2.6rpx;
  padding-right: 22.6rpx;  
}
.item-info-text {
  font-size: 11px;
  color: #999;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-width: 85%;
}
.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}
.author {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.author-avatar {
  height: 34rpx;
  width: 34rpx;
  flex-shrink: 0;
  border-radius:50%;
}
.author-name {
  font-size: 12px;
  color: #999999;
  padding: 0 10rpx;
  flex-shrink: 0;
}
.author-grade {
  height: 25rpx;
  width: 40rpx;
  flex-shrink: 0;
}
.state-button-view {
  display: flex;
  flex-direction: row-reverse;
  justify-content:flex-end;
}
.state-button {
  font-size: 12px;
  height: 50rpx;
  width: 140rpx;
  line-height: 50rpx;
  color: #ffffff;
  background-color: #bababa;
  margin-right: 1rpx;
}
.state {
  font-size: 10px;
  color: #ffffff;
  background-color: #7ec2e2;
  border-radius: 10rpx;
  width:107rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  /* padding:5rpx 10rpx; */
  margin-top: 5rpx;
  align-items: center;
}
.dividing {
  height: 13rpx;
  background-color:#eeeeee;
}
.none-wrap {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.none-wrap image {
  height: 270rpx;
  width: 320rpx;
}
.none-wrap text {
  font-size: 14px;
  color: #999999;
  padding-top: 50rpx;
}

.item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 0 30rpx;
}
.delete-wrap {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.delete {
  padding-left: 15rpx;
  height: 42rpx;
  width: 42rpx;
}
.show{
  display: block;
}
.hidden{
  display: none;
}