@import "/pages/template/template.wxss";
@import "/components/activity/index.wxss";

.item {
  display: flex;
  flex-direction: column;
  padding: 25rpx 0 0 30rpx;
}
.item-top {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 20rpx;
}
.item-info{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width:100%;
  padding-bottom:13rpx;
}

.item-info-text {
  font-size: 14px;
  color: #333333;
  /* width: 100%; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical /*! autoprefixer: on */;
}


