/* custom */
.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.logo {
  width: 100rpx;
  height: 50rpx;
  padding-bottom: 5rpx;
  padding-right: 10rpx;
}

.search-input {
  width: 390rpx;
  border: 1px solid #dddddd;
  /* padding-left: 70rpx; */
  border-radius: 50px;
}

.search-icon {
  height: 30rpx;
  width: 30rpx;
}
.search-wrap {
  width: 100%;
  height: 46px;
  line-height: 46px;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  background-color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 30rpx;
}

