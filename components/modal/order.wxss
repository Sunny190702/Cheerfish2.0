/* components/modal/order.wxss */
/* modal.wxss */
.mask{
 /* position: absolute; */
 position: fixed;
 left: 0;
 right: 0;
 top: 0;
 bottom: 0;
 display: flex;
 justify-content: center;
 align-items: center;
 background-color: rgba(0,0,0,0.4);
 z-index: 9999;
}

.modal-content{
 display: flex;
 flex-direction: column;
 width: 90%;
 background-color: #fff;
 border-radius: 10rpx;
}

.modal-btn-wrapper{
 display: flex;
 flex-direction: row;
 height: 100rpx;
 line-height: 100rpx;
 border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
 flex: 1;
 height: 100rpx;
 line-height: 100rpx;
 text-align: center;
 font-size: 32rpx;
 background-color: #fff;
}

.cancel-btn{
 border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
 /* flex: 1; */
 display: flex;
 flex-direction: column;
 justify-content: center;
 height: 100%;
 overflow-y: hidden;

}

.course-detail-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  /* padding: 30rpx; */
  /* padding-top:10px; */
}

.detail-wrap {
  display: flex;
  flex-direction: column;
  box-shadow:1px 1px 10px #ececef;
  /* border-radius:10px; */
  padding: 15rpx 30rpx;
}
.detail-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.item-key {
  font-size: 14px;
  padding:  15rpx 0;
  color: #333333;
  font-weight: 600;
}

.item-value {
  font-size: 14px;
  padding:  15rpx 0 15rpx 10rpx;
  padding-left: 10rpx;
  color: #8c8c8c;
}

.auth {
  padding: 30rpx 0;
  align-self: left;
  color: #a9a9a9;
  font-size: 14px;
}

.title {
   display: flex;
   flex-direction: column;
   padding-top: 20px;
   /* background-color: #ff0; */
}

.title-info {
  text-align: center;
  font-size: 16 px;
  color:#000;
  font-weight: 500;
  padding:1px 10px;
}

.title-message {
  text-align: center;
  font-size: 12px;
  color:#f00;
  padding-top:1px;
}

.label {
  font-size: 16px;
  color: #333333;
}
.star {
  color: red;
  padding-right: 15rpx;
}
.input {
  padding-left: 70rpx;
  color: #333333;
  flex-grow: 1;
  font-size: 24rpx;
}
.item {
  display: flex;
  padding: 30rpx 10rpx;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 0.1rpx solid #eaeaea;
  /* background-color: #f00; */
  width: 90%;
  padding-left:50rpx;
}

.bottom-tip  {
  padding: 60rpx 0 30rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 40rpx;
}

.bottom-tip image {
  height: 32rpx;
  width: 32rpx;
}

.bottom-tip .tip1 {
  font-size: 12px;
  color: #333333;
  padding: 0 20rpx;
}

.bottom-tip .tip2 {
  font-size: 12px;
  color: #999999;
}